<div class="cardimage">
    <div class="userinfo">
        <div class="avatar">
            <img src="https://i.pinimg.com/originals/df/c5/fa/dfc5faf10d97e9c45fb29f8ecff17716.jpg" alt="avatar">
        </div>
        <div class="infotext">
            <h3><%= theme.infocard.author %></h3>
            <p><%= theme.infocard.introduce %></p>
        </div>
    </div>
    <div class="blogdata">
        <div class="item">
            <a href="/archives">
                <span class="bd-name">文章</span>
                <span class="bd-count"><%= site.posts.length %></span>
            </a>
        </div>
        <div class="item">
            <a href="#">
                <span class="bd-name">分類</span>
                <span class="bd-count"><%= site.categories.length %></span>
            </a>
        </div>
        <div class="item">
            <a href="#">
                <span class="bd-name">標籤</span>
                <span class="bd-count"><%= site.tags.length %></span>
            </a>
        </div>
    </div>
    <div class="userlinks">
        <% theme.infocard.links.forEach(element => { %>
            <a class="linkicon" href="<%=element['link']%>"><i class="<%=element['icon']%>"></i></a>
        <%}); %>
    </div>
</div>