<div class="recent-posts">
  <div class="card-title">最近文章</div>
  <% const limit = 5 %> <% for (let i = 0; i < page.posts.length && i < limit;
  i++) { %> <% const post = page.posts.data[i] %>
  <div class="post-item">
    <div class="post-date"><%= date(post.date, "YYYY-MM-DD") %></div>
    <div class="post-title">
      <a href="<%- url_for(post.path) %>"><%= post.title %></a>
    </div>
  </div>
  <% } %>
</div>
