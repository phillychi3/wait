<div
  class="headerimage <%= height %>"
  style="background-image: url('<%= theme.headerimage %>')"
>
  <div class="homemsg">
    <% if(type=="index"){ %>
    <h1 class="title"><%= config.title %></h1>
    <h2 class="subtitle"><%= config.subtitle %></h2>
    <% }else if(type=="post" && page.type != "friends"){ %>
    <h1 class="title"><%= page.title %></h1>
    <h2 class="information"><%- date(page.date, "YYYY-MM-DD") %></h2>
    <% }else if(page.type == "friends"){ %>
    <h1 class="title"><%- __('Friends.Title') %></h1>
    <% } %>
  </div>
</div>
