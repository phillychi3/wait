.cardimage::after
    content: "";
    background-image: url(hexo-config('background'))
    background-size:cover;
    opacity: 0.5;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    position: absolute;
    z-index: -1;
    border-radius: 10px;

.cardimage
    position: relative;
    padding: 20px;
    text-align: center;
    border-radius: 10px;
    margin-bottom: 1em;

    .userinfo

        .avatar
            overflow: hidden;
            margin: 0 auto;
            width: 110px;
            height: 110px;
            border-radius: 50px;
            img
                border-radius: 50%;
                height: 100px;
                width: 100px;

        .infotext
            color: var(--font-color);

    .blogdata
        display: flex;
        justify-content: center;

        .item
            padding: 20px;

            .bd-name
                color: var(--font-color);
                display: block;
                white-space: nowrap;

            .bd-count
                color: var(--font-color);
                display: block;

    .userlinks
        display: flex;
        justify-content: center;
        flex-wrap: wrap;

        a
            display: flex;
            align-content: center;
            align-items: center;
            justify-content: center;
            width:3em;
            height: 3em;
            color: var(--font-color);

.customize
    position: relative;
    text-align: center;
    border-radius: 10px;
    margin-bottom: 1em;

    p
        padding: 5px;
        color: var(--font-color);

    .image
        img
            width: 100%;
            height: 100%;
            border-radius: 10px;

.recent-posts
  background: var(--card-backgroung-color)
  border-radius: 8px
  padding: 1.5rem
  margin-bottom: 1rem
  color: var(--font-color)

  .card-title
    font-size: 1.1rem
    margin-bottom: 1rem
    padding-bottom: 0.5rem

  .post-item
    margin-bottom: 1rem
    border-bottom: 1px solid var(--border-line-color)

    &:first-child
      padding-top: 0

    &:last-child
      border-bottom: none
      padding-bottom: 0

    .post-date
      font-size: 0.85rem
      margin-bottom: 0.25rem
      opacity: 0.7

    .post-title
      font-size: 0.95rem
      line-height: 1.4

      a
        text-decoration: none
        transition: opacity 0.2s
        color: var(--font-color)

        &:hover
          opacity: 0.8


