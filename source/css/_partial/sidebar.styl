.cardimage
    background-image: url("https://picsum.photos/400/800?random=1");
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center;
    position: relative;
    padding: 20px;
    text-align: center;
    border-radius: 30px;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.884);
    margin-bottom: 1em;
    // color: light-dark(var(--light-color), var(--dark-color));

    .userinfo


        .avatar
            overflow: hidden;
            margin: 0 auto;
            width: 110px;
            height: 110px;
            border-radius: 50px;
            img
                border-radius: 50%;
                height: 100px;
                width: 100px;


        .infotext
            color: var(--rgba-font-color);


    .blogdata
        display: flex;
        justify-content: center;

        .item
            padding: 20px;



            .bd-name
                color: var(--rgba-font-color);
                display: block;


            .bd-count
                color: var(--rgba-font-color);
                display: block;





    .userlinks
        display: flex;
        justify-content: center;
        flex-wrap: wrap;

        a
            display: flex;
            align-content: center;
            align-items: center;
            justify-content: center;
            width:3em;
            height: 3em;
            color: rgba(0,0,0,0.8);



.customize
    position: relative;
    text-align: center;
    border-radius: 30px;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.884);
    margin-bottom: 1em;

    .image
        img
            width: 100%;
            height: 100%;
            border-radius: 30px;

.newpost
    position: relative;
    text-align: left;
    border-radius: 30px;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.884);
    margin-bottom: 1em;
    padding: 20px;
    color: var(--rgba-font-color);
    .title
        font-size: 1em;
        font-weight: bold;
        color: var(--rgba-font-light-color);
    .date
        font-size: 0.7em;
        color: var(--rgba-font-light-color);



