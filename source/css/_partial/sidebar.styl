.cardimage::after
    content: "";
    background-image: url(hexo-config('background'))
    background-size:cover;
    opacity: 0.5;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    position: absolute;
    z-index: -1;
    border-radius: 30px;

.cardimage
    position: relative;
    padding: 20px;
    text-align: center;
    border-radius: 30px;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.884);
    margin-bottom: 1em;

    .userinfo

        .avatar
            overflow: hidden;
            margin: 0 auto;
            width: 110px;
            height: 110px;
            border-radius: 50px;
            img
                border-radius: 50%;
                height: 100px;
                width: 100px;

        .infotext
            color: var(--font-color);

    .blogdata
        display: flex;
        justify-content: center;

        .item
            padding: 20px;

            .bd-name
                color: var(--font-color);
                display: block;
                white-space: nowrap;

            .bd-count
                color: var(--font-color);
                display: block;

    .userlinks
        display: flex;
        justify-content: center;
        flex-wrap: wrap;

        a
            display: flex;
            align-content: center;
            align-items: center;
            justify-content: center;
            width:3em;
            height: 3em;
            color: var(--font-color);

.customize
    position: relative;
    text-align: center;
    border-radius: 30px;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.884);
    margin-bottom: 1em;

    p
        padding: 5px;
        color: var(--font-color);

    .image
        img
            width: 100%;
            height: 100%;
            border-radius: 30px;

.newpost
    position: relative;
    text-align: left;
    border-radius: 30px;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.884);
    margin-bottom: 1em;
    padding: 20px;
    color: var(--rgba-font-color);
    .title
        font-size: 1em;
        font-weight: bold;
        color: var(--rgba-font-light-color);
    .date
        font-size: 0.7em;
        color: var(--rgba-font-light-color);



