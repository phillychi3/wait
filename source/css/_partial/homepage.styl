.homepage
    position relative

    .darkmode-toggle
      margin: 0 1rem

    .darkmode-button
      background: none
      border: none
      cursor: pointer
      padding: 0.5rem
      font-size: 1.2rem
      line-height: 1
      display: flex
      align-items: center
      justify-content: center

      .sun-icon
      .moon-icon
        position: absolute
        transition: opacity 0.3s ease

      .sun-icon
        color: #e5e5e5
        opacity: 0

      .moon-icon
        color: #e5e5e5
        opacity: 0

    .headerimage
        position: relative;
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        width: 100%;
        z-index :-999
        overflow: hidden;


    .headerimage::before
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.3);
        z-index: -1;


    .headfill
        height: 100vh;

    .head40
        height: 40vh;

    .header
        display: flex
        align-items: baseline
        justify-content: space-between
        padding: 10px 10px
        backdrop-filter: blur(20px)
        transition: all 0.5s ease-in-out


        .blog-title .logo
            color: #FFFF;
            font-size: 1.5em;
            font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
            text-decoration: none;
        .navbar
          .menu
              margin: 0;
              padding: 0;
              .menu-item
                display: inline-block;
                margin-right: 10px;
              .menu-item-link
                color: #AAA;
                text-decoration: none;
                &:hover
                    color: #368CCB;

        .mobile-menu
          display: none
          position: fixed
          top: 80px
          left: 0
          width: 100%
          background: var(--backgroung-color)
          box-shadow: 0 2px 5px rgba(0,0,0,0.1)
          transition: all 0.5s ease-in-out

          &.active
            display: block
            animation: slideDown 0.3s ease forwards

          .menu
            padding: 1rem
            margin: 0
            list-style: none

            .menu-item
              padding: 0.8rem 1rem
              .menu-item-link
                color: var(--font-color)

        .menu-toggle
          display: none
          background: none
          border: none
          color: var(--font-color)
          font-size: 1.5rem
          cursor: pointer
          padding: 0.5rem

        @media screen and (max-width: 768px)
          .navbar .menu
            display: none

          .menu-toggle
            display: block


    .header-black
        background-color: rgba(0, 0, 0, 0.767);
        padding: 0 10px
        .mobile-menu
          top: 60px

    .homemsg
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center
        .title
            @media (max-width: 768px)
                font-size: 1.5em;

            font-size: 3em;
            color: #fff;
            font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
            text-shadow: 0 0 10px #000;
            margin-bottom: 20px;

        .subtitle
            @media (max-width: 768px)
                font-size: 1.3em;

            font-size: 2em;
            color: #fff;
            font-family: "Noto Sans TC", sans-serif;
            text-shadow: 0 0 10px #000;
            margin-bottom: 20px;

        .information
            @media (max-width: 768px)
                font-size: 0.8em;

            font-size: 1.2em;
            color: #fff;
            font-family: "Noto Sans TC", sans-serif;
            text-shadow: 0 0 10px #000;
            margin-bottom: 20px;

    .issvg
        width: 100%;
        position: absolute;
        bottom: 0;
        z-index: -999;
        transition: var(--color-animation);
        svg
            width: 100%;
            height: 100%;



:root[data-theme="light"]
  .darkmode-button
    .sun-icon
      opacity: 0
    .moon-icon
      opacity: 1

:root[data-theme="dark"]
  .darkmode-button
    .sun-icon
      opacity: 1
    .moon-icon
      opacity: 0

@keyframes slideDown {
  from {
    transform: translateY(-10%)
    opacity: 0
  }
  to {
    transform: translateY(0)
    opacity: 1
  }
}